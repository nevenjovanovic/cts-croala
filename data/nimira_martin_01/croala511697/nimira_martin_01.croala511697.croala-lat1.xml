      <back xml:lang="lat" n="back1">
         <div n="div1" type="epigramma" met="elegiacum">
            <head n="head1">
               <persName n="persName1">M. Nimireus</persName> Lectori <abbr n="abbr1">S.</abbr>
            </head>

            <l n="l1">Qui cupis imperio populis dare jura sagaci</l>
            <l n="l2">Et qui non nisi fronte parere cupis,</l>
            <l n="l3">Si te perpetuo nullis quaesita triumphis</l>
            <l n="l4">Pax juvat et Pietas Urbis et alma fides,</l>
            <l n="l5">Accipe <persName n="persName1">Aristotelis</persName> praeclara volumina Lector</l>
            <l n="l6">Seu pareas seu tu Sceptra verenda tenes.</l>


         </div>
      </back>

  
