    <text xml:base="urn:cts:croala:crni01.croala780071.croala-lat1:" xml:lang="lat" type="poesis">
        <body xml:lang="lat" n="body1">
         <div n="div1" type="poesis-inscriptio" met="hexameter-leoninus">
    
            <l n="l1">Tam sordente domo perspice quid sit <sic n="sic1">omo</sic>
            </l>
            <l n="l2">in rebus stultis studui nichil utile multis</l>
            <l n="l3">et dum uigui terror in orbe fui</l>
            <l n="l4">parum aduc dicam de mei corporis <supplied n="supplied1">vitam</supplied>
            </l>
            <l n="l5">dum vicxit in mundo ualatus munere <supplied n="supplied1">fundo</supplied>
            </l>
            <l n="l6">ingenio lucxit Petrus sua quam bene <supplied n="supplied1">ducxit</supplied>
            </l>
            <l n="l7">omnia <sic n="sic1">despecsit</sic> cor semper ad <supplied n="supplied1">etera</supplied> uecxit</l>
            <l n="l8">templum fundauit cum menibus <supplied n="supplied1">et decorauit</supplied>
            </l>
            <l n="l9">
               <corr n="corr1">hic</corr> obdormivit cum spiritu <supplied n="supplied1">astra</supplied> petivit</l>
            <l n="l10">dominus ascribit Dabrus hic me <supplied n="supplied1">perfecit</supplied>
            </l>
         </div>    
                    </body>

 

            </text>
